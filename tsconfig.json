{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}